									<a href="<%= videolink %>">
										<img src="<%= item.thumbnail %>" alt="thumbnail" width="450" height="300">
									</a>
								</div>
								<div class="links">
									<a href="<%= videolink %>">
										<h3 style="text-transform: capitalize;"><strong><%= item.title %></strong></h3>
									</a>
								</div>
							</div>
