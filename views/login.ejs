<!DOCTYPE html>
<html>
	<head>
		<%- include('content/ejs/head.ejs', {title: "Login"}) %>
	</head>
	<body>
		<nav>
			<%- include('content/ejs/navbar.ejs') %>
			<%- include('content/ejs/banner.ejs') %>
		</nav>

		<main>
			<h1>Login:</h1>

			<%- include('content/ejs/body.ejs') %>

			<form action="/login" method="POST" class="authform" onsubmit="return validateForm();">
				<p>Enter your Information to Log in.</p>
				<div>
					<input id="username" name="username" placeholder="Username" autofocus>
				</div>
				<div>
					<input id="password" name="password" type="password" placeholder="Password">
				</div><br>
				<div>
					<input type="submit" value="Login">
				</div><br>
				<div class="underlinelinks">
					<a href="/register">Register?</a>
				</div>
			</form>

			<%- include('content/ejs/bottombody.ejs') %>

			<%- include('content/ejs/scripts.ejs') %>
			<script src="/content/javascript/validateform.js"></script>
		</main>
	</body>
</html>
