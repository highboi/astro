<!--The form for submitting reports on a video-->

<% if (typeof video != 'undefined') { %>
	<object id="<%= video.id %>reportform">
		<form action="/report/video/<%= video.id %>" method="post">
			<h2>Why is this bad?</h2>

			<p>Timestamp Selected:</p>
			<input type="text" id="hours" name="hours" value="" size="3">:
			<input type="text" id="minutes" name="minutes" value="" size="2">:
			<input type="text" id="seconds" name="seconds" value="" size="2"><br>

			<label for="cabuse">Child Abuse</label>
			<input type="radio" id="cabuse" name="reason" value="cabuse"><br>

			<label for="sex">Sexual/NSFW</label>
			<input type="radio" id="sex" name="reason" value="sex"><br>

			<label for="graphic">Graphic/NSFL</label>
			<input type="radio" id="graphic" name="reason" value="graphic"><br><br>

			<input type="submit" value="Submit">
		</form>
	</object>
<% } %>

