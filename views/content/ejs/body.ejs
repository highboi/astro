<!--EJS included at the top of each document body on the site-->

<div class="messages">
	<% if (typeof message != 'undefined') { %>
		<p><%= message %></p>
	<% } %>

	<ul>
		<% if (typeof errors != 'undefined') { %>
			<% errors.forEach((item, index) => { %>
				<li><%= item %></li>
			<% }); %>
		<% } %>
	</ul>
</div>

<% if (typeof noadvert == "undefined") { %>
	<div class="adverts" data-position="banner"></div>
<% } %>
