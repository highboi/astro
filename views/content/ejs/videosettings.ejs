<!--EJS for displaying the settings for a video-->

<div id="videosettings">
	<label for="speedSettings">Speed:</label>
	<select id="speedSettings">
		<option value="0.25">0.25</option>
		<option value="0.5">0.5</option>
		<option value="0.75">0.75</option>
		<option value="1.0" selected="">1.0</option>
		<option value="1.25">1.25</option>
		<option value="1.5">1.5</option>
		<option value="1.75">1.75</option>
		<option value="2.0">2.0</option>
	</select>

	<label for="resolutionSettings">Resolution:</label>
	<select id="resolutionSettings">
		<option value="original">Original</option>
		<% if (typeof resolutions != 'undefined' && resolutions != null) { %>
			<% resolutions = JSON.parse(resolutions) %>
			<% resolutions.forEach((item, index) => { %>
				<option value="<%= item %>"><%= item %>p</option>
			<% }); %>
		<% } %>
	</select>

	<% if (typeof subtitles != "undefined") { %>
		<label for="captionSettings">Captions:</label>
		<label class="switch" id="captionSettings">
			<input class="switchinput" type="checkbox">
			<span class="slider"></span>
		</label>
	<% } %>

</div>
