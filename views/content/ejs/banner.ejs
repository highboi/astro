<div class="banner">
	<div id="banner-icon">
		<a href="/" target="_parent">
		<img src="/content/icons/favicon.ico">
		</a>
	</div>
	<div id="searchbar">
		<form action="/search" method="get" target="_parent">
			<div id="searchbtn">
				<button type="submit" value="Submit"><img src="/content/icons/search.ico"></button>
			</div>
			<div id="searchquerydiv">
				<input type="text" id="searchquery" name="searchquery" onkeyup="keyupSearch()" required>
			</div>
			<div id="searchrecsdiv">
				<div id="searchrecs"></div>
			</div>
		</form>
	</div>
	<div id="actionsmenu" class="dropdown">
		<h4>DO STUFF!</h4>
		<div class="dropdown-content">
			<% if (typeof user != 'undefined') { %>
				<% var channellink = `/u/${user.id}`; %>
				<button><a href="/">Home</a></button><br>
				<button><a href="<%= channellink %>">My Channel</a></button><br>
				<button><a href="<%= channellink %>/?section=playlists">My Playlists</a></button><br>
				<button><a href="/v/submit">Submit a Video</a></button><br>
				<button><a href="/playlist/new">Make a Playlist</a></button><br>
				<button><a href="/l/start">Start a Live Stream</a></button><br>
				<button><a href="/logout">Log Out</a></button>
			<% } else { %>
				<button><a href="/login">Login</a></button><br>
				<button><a href="/register">Register</a></button>
			<% } %>			
		</div>
	</div>
	<div id="settingsmenu" class="dropdown">
		<h4>SETTINGS</h4>
		<div class="dropdown-content">
			
		</div>
	</div>
	<div id="usercorner">
		<% if (typeof user != 'undefined') { %>
			<button id="channelcorner" onclick="window.location.href = '/u/<%= user.id %>';"><img src="<%= user.channelicon %>"></button>
		<% } else { %>
			<button id="signincorner" onclick="window.location.href = '/login';">Sign In</button>
		<% } %>
	</div>
</div>
